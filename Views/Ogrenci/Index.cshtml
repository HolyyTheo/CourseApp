@model IEnumerable<Ogrenci>

<h2>Öğrenci Listesi</h2>
<hr>
<a href="/Ogrenci/Create" class="btn btn-primary mb-3">Öğrenci Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgrenciId)</th>
                <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
                <th>@Html.DisplayNameFor(m => m.OgrenciSoyad)</th>
                <th style="width: 150px;" colspan="2">İşlemler</th>
              
        
            </tr>
        </thead>
        <tbody>
            
            @foreach(var ogrenci in Model)
            {
                <tr>
                    
                        <td>@Html.DisplayFor(modelItem => ogrenci.OgrenciId)</td>
                        <td>@Html.DisplayFor(modelItem => ogrenci.OgrenciAd)</td>
                        <td>@Html.DisplayFor(modelItem => ogrenci.OgrenciSoyad)</td>
                        <td><a  asp-action="Edit" asp-route-id="@ogrenci.OgrenciId" class="btn brn-sm btn-danger">Details</a></td>
                        <td><a  asp-action="Delete" asp-route-id="@ogrenci.OgrenciId" class="btn brn-sm btn-danger">Delete</a></td>
                        

                </tr>

            }

      

        </tbody>
    </table>